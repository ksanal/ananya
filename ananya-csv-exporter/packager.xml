<project name="Packager" default="package" basedir=".">
    <description>
        Packages artifacts
    </description>

    <target name="package">
        <copy file="${base.directory}/csvExporter.sh" todir="${project.build.directory}"/>
        <copy file="${project.build.directory}/ananya-csv-exporter-${project.version}.jar" todir="${project.build.directory}/lib"/>
        <zip destfile="${project.build.directory}/csv-exporter.zip"
             basedir="${project.build.directory}"
             includes="lib/, csvExporter.sh"/>
    </target>

</project>

