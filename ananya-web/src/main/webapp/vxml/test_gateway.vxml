<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.1" xmlns="http://www.w3.org/2001/vxml"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.w3.org/2001/vxml http://www.w3.org/TR/voicexml21/vxml.xsd">

    <script src="../generated/js/metadata.js"/>
    <script>
        var Controller = function() {

            this.promptUri = function() {
                return metaData["audio.url"] + metaData["test_gateway.audio"];
            };

            this.certificateCourseLandingUri = function() {
                return  "certificatecourse_landing.vxml";
            };

            this.jobAidLandingUri = function() {
                return "jobaid_landing.vxml";
            };

            this.registerUri = function() {
                return "register.vxml";
            };

            this.jobAidUri = function() {
                return "jobaid.vxml";
            };

            this.certificateCourseUri = function() {
                return "certificatecourse.vxml";
            };

        };

        var controller = new Controller();
    </script>

    <property name="bargein" value="true"/>
    <property name="inputmodes" value="dtmf" />
    <property name="timeout" value="4s"/>

    <menu id="test_menu" dtmf="true">
        <prompt>
            <audio expr="controller.promptUri()" />
        </prompt>

        <choice maxage="0" maxstale="0" dtmf="1" expr="controller.certificateCourseLandingUri()" />
        <choice maxage="0" maxstale="0" dtmf="2" expr="controller.jobAidLandingUri()" />
        <choice maxage="0" maxstale="0" dtmf="3" expr="controller.registerUri()" />
        <choice maxage="0" maxstale="0" dtmf="4" expr="controller.jobAidUri()" />
        <choice maxage="0" maxstale="0" dtmf="5" expr="controller.certificateCourseUri()" />

        <noinput>
            <reprompt />
        </noinput>
        <nomatch>
            <reprompt />
        </nomatch>
    </menu>

</vxml>
