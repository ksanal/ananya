<div class="row-fluid">
    <div class="span8">
        <table id="logs" class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>Name</th>
                <th>File Size (MB)</th>
                <th>Last Updated</th>
            </tr>
            </thead><tbody>
                #foreach($entry in $logFilesInfo)
                <tr>
                    <td><a href="admin/peer/logs/$entry.getName()">$entry.getName()</a></td>
                    <td>$entry.getSize()</td>
                    <td>$entry.getLastUpdated()</td>
                </tr>
                #end
            </tbody>
        </table>
    </div>
</div>