<div id="all_monitors">
    <div class="row-fluid">
        <div class="span12">
            <div class="page-header">
                <h2>Monitoring</h2>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span4">
            <h2>POSTGRES</h2>
        </div>
    </div>
    <div class="row-fluid">
        #monitorTable($postgresData "Title" "Count")
    </div>
    <div class="row-fluid">
        <div class="span4">
            <h2>COUCHDB</h2>
        </div>
    </div>
    <div class="row-fluid">
        #monitorTable($couchdbData "Document" "Count")
    </div>
</div>

#macro(monitorTable $dataMap $column1Title $column2Title)
<div class="span8">
    #if($dataMap.containsKey("error"))
        <div class="alert alert-error">
            $dataMap.get("error")
        </div>
    #else
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th width="50%">$column1Title</th>
                <th>$column2Title</th>
            </tr>
            </thead>
            <tbody>
                #foreach($entry in $dataMap.entrySet())
                <tr>
                    <td>$entry.key</td>
                    <td>$entry.value</td>
                </tr>
                #end
            </tbody>
        </table>
    #end
</div>
#end