<div id="all_monitors">
    
    <div class="row-fluid">
        <div class="span12">
            <div class="page-header">
                <h2>Monitoring</h2>
            </div>
        </div>
    </div>

    <div class="row-fluid">
        <div class="span4">
            <h2>POSTGRES</h2>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span8">
            <table id="postgres-monitor" class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th width="50%">Title</th>
                    <th>Count</th>
                </tr>
                </thead>
                <tbody>
                    #foreach($entry in $postgresData.entrySet())
                    <tr>
                        <td>$entry.key</td>
                        <td>$entry.value</td>
                    </tr>
                    #end
                </tbody>
            </table>
        </div>
    </div>

    <div class="row-fluid">
        <div class="span4">
            <h2>COUCHDB</h2>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span8">

            <table id="couchdb-monitor" class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th width="50%">Document</th>
                    <th>Count</th>
                </tr>
                </thead>
                <tbody>
                    #foreach($entry in $couchdbData.entrySet())
                    <tr>
                        <td>$entry.key</td>
                        <td>$entry.value</td>
                    </tr>
                    #end
                </tbody>
            </table>
        </div>
    </div>

</div>